<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context=".EmergencyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="137dp"
            app:srcCompat="@drawable/finallogo" />


        <TextView
            android:id="@+id/onlineMed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online Medical Resources Access "
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/onlineMed1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(OMRA)"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fillView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Dear, "
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="email address"
                android:textSize="15sp"
                 />


        </LinearLayout>

        <TextView
            android:id="@+id/formView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="Select an Emergency service to make a call"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ambulanceImg"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:scaleType="centerCrop"
            android:contentDescription="Schedule your Appointment"
            app:srcCompat="@drawable/ambulance"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/ambulanceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Press the image to call an ambulance"
            android:textColor="#0E0E0E"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/policeImg"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:scaleType="centerCrop"
            android:contentDescription="Schedule your Appointment"
            app:srcCompat="@drawable/police"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/policeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Press the image to call the police"
            android:textColor="#0E0E0E"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/fireImg"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:scaleType="centerCrop"
            android:contentDescription="Schedule your Appointment"
            app:srcCompat="@drawable/fire"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/fireView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Press the image to call the fire team"
            android:textColor="#0E0E0E"
            android:textStyle="bold" />
        <Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/custom_login_button"
            android:shadowColor="@color/black"
            android:text="Back"
            android:textAllCaps="false" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>