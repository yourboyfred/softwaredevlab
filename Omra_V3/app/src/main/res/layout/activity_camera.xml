<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context=".CameraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        app:srcCompat="@drawable/finallogo" />


    <TextView
        android:id="@+id/onlineMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Online Medical Resources Access "
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/onlineMed1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(OMRA)"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold" />
        <TextView
            android:id="@+id/onlineMed3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="please capture a photo of your prescription"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/pic"
            android:layout_width="228dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CAMERA" />

            <Button
                android:id="@+id/gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GALLERY" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:text="Back"
            android:id="@+id/backBtn"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="email address"
            android:textStyle="bold"
            android:id="@+id/emailAddress"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>