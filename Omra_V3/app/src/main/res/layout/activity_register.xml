<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/background_2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rLogo"
            android:layout_width="match_parent"
            android:layout_height="203dp"
            app:srcCompat="@drawable/finallogo" />

        <TextView
            android:id="@+id/registerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:text="First Name" />

        <EditText
            android:id="@+id/rEnterFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:hint="Type your first name"
            android:inputType="text" />

        <TextView
            android:id="@+id/rLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:text="Last Name" />

        <EditText
            android:id="@+id/rEnterLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:hint="Type your last name"
            android:inputType="text" />

        <TextView
            android:id="@+id/rEmailView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:text="Email" />

        <EditText
            android:id="@+id/rEnterEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:hint="Type your email address"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/rPasswordView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:text="Password" />

        <EditText
            android:id="@+id/rEnterPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/lock"
            android:hint="Type your password"
            android:inputType="textPassword" />

        <ProgressBar
            android:id="@+id/progressbar"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/rRegisterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="100dp"
            android:text="Register"
            android:background="@drawable/custom_login_button"
            android:shadowColor="@color/black"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/rLoginNow"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Login Now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>